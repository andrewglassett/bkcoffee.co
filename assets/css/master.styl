@import '_settings'

normalize-css()
base()

*
  box-sizing: border-box
ul, li
  margin: 0
  padding: 0
  list-style-type: none
body
  padding: 0px
  color: brown
img
  max-width: 100%

h1, h2, h3
  font-family: 'Oswald', sans-serif
  text-transform: uppercase
  font-weight: 500

h2
  font-size: 3em
  text-align: center
h3
  font-size: 2em
p
  font-size: 1.5em

#intro
  bg: '/img/bg.jpg' no-repeat center center fixed
  background-size: cover
  text-align: center
  margin: 0 auto
  padding: 10%
  color: white
  .intro
    center(1200px)
    h1
      font-size: 4em

#statement
  col()
  background: #443b37
  bg: '/img/statement.jpg'
  .statement
    center(1200px)
    text-align: center
    padding: 10%
    color: white

#products
  col()
  background: red
  color: white
  .title
    padding: 2em
    text-align: center
    ::before
      content: url('/img/coffee-icon.svg')
  .product
    margin: 0 4em 4em
    center(1200px)
    .image
      col(1/2)
      +below(700px)
        col()
    .description
      col(1/2)
      padding: 3em
      +below(700px)
        col()
        padding:2em
      p
        font-size: 1.2em

#blueprint
  col()
  width: 100%
  height: 800px
#app
  col()
  width: 100%
#enjoy
  col()
  bg: '/img/enjoy.jpg' no-repeat center center
  background-size: cover
  width: 100%
  height: 800px
#footer
  col()
  background: brown
  ul
    li
      :hover
        background: brown2
      a
        width: 33.33333333%
        float: left
        text-align: center
        padding: 2em 0
        display: block
